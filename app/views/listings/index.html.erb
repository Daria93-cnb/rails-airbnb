<div class="container w-75">
  <h1>All Flats/Houses</h1>
  <div class="row d-flex">
    <% @listings.each do |listing|%>
      <div class="col-12 col-md-6 col-lg-4">
        <%# <%= cl_image_tag listing.photo.key, height: 300, width: 400, crop: :fill %>

<div class="container w-75">
  <h1>Property Details</h1>
  <%= link_to listings_path do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>

  <div class="listing-info m-b-50">
    <img src="https://www.habituallychic.luxury/wp-content/uploads/2019/03/virginia-howard-london-flat-habituallychic-001-1024x683.jpg" alt="" class="w-100">
    <h3><%= @listing.name %></h3>
    <h4><%= @listing.location %></h4>
    <p>Maximum number of guests <%= @listing.number_guests %></p>
    <p><%= @listing.description %></p>
  </div>

  <div class="booking-property-form">
    <h5>Make a new booking</h5>
    <%= simple_form_for [@listing, @booking] do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit %>
    <% end %>
  </div>

